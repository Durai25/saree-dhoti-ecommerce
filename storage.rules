rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Product images: public read, only active admins can write
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.token.email)).data.active == true;
    }

    // default: allow read, disallow write
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}