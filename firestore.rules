rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // helper to check admins collection for active admin
    function isAdmin(email){
      return email != null && get(/databases/$(database)/documents/admins/$(email)).data.active == true;
    }

    // Products: anyone can read, only active admins can write
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && isAdmin(request.auth.token.email);
    }

    // Orders: anyone can create (customer placing order), only active admins can read/update
    match /orders/{orderId} {
      allow create: if true; // customers place orders without auth
      allow read, update: if request.auth != null && isAdmin(request.auth.token.email);
    }

    // Issues: customers can create, admins can read
    match /issues/{issueId} {
      allow create: if true;
      allow read, update: if request.auth != null && isAdmin(request.auth.token.email);
    }

    // Admins: owner-only writes, admins can read
    match /admins/{adminId} {
      allow read: if request.auth != null && isAdmin(request.auth.token.email);
      // WRITE is restricted to Owner - replace thangaduraipazhani@gmail.com with real owner email
      allow write: if request.auth != null && request.auth.token.email == 'thangaduraipazhani@gmail.com';
    }

    // Default: deny
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}