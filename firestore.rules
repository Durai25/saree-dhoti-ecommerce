rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // helper to check admins collection for active admin
    function isAdmin(email){
      return email != null && get(/databases/$(database)/documents/admins/$(email)).data.active == true;
    }

    // Products: anyone can read, only active admins can write
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && isAdmin(request.auth.token.email);
    }

    // Orders: customers can create with valid data, only active admins can read/update
    match /orders/{orderId} {
      allow create: if request.resource.data.keys().hasAll(['customerName', 'phone', 'address', 'items', 'total', 'paymentStatus', 'orderStatus'])
                      && request.resource.data.customerName is string
                      && request.resource.data.customerName.size() > 0
                      && request.resource.data.phone is string
                      && request.resource.data.phone.size() >= 10
                      && request.resource.data.address is string
                      && request.resource.data.address.size() > 0
                      && request.resource.data.total is number
                      && request.resource.data.total > 0;
      allow read, update: if request.auth != null && isAdmin(request.auth.token.email);
    }

    // Issues: customers can create, admins can read
    match /issues/{issueId} {
      allow create: if true;
      allow read, update: if request.auth != null && isAdmin(request.auth.token.email);
    }

    // Users: users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Admins: owner can write, authenticated users can read their own doc
    match /admins/{adminId} {
      allow read: if request.auth != null && request.auth.token.email == adminId;
      allow write: if request.auth != null && request.auth.token.email == 'thangaduuraipazhani@gmail.com';
    }

    // Default: deny
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
